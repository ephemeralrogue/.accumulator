{
	"compilerOptions": {
	  "target": "ESNext",
	  "lib": ["ES2020"],
	  "outDir": "./dist",
	  "allowJs": true,
	  "sourceMap": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "noEmitOnError": true,
	  "noEmitHelpers": true,
	  "esModuleInterop": true,
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "incremental": true,
	  "baseUrl": ".",
	  "paths": {
		"@app/*": ["src/app/*", "dist/app/*"],
		"@lib/*": ["src/lib/*", "dist/lib/*"]
	  }
	},
	"include": ["src/**/*.ts", "src/lib/telemetry/logger.js"],
	"exclude": ["node_modules"]
  }
  